{
  "dependencies": {
    "macroforge": "^0.1.72"
  },
  "description": "Svelte preprocessor for expanding Macroforge macros in component script blocks",
  "devDependencies": {
    "svelte": "^5.43.8",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "svelte",
    "preprocessor",
    "macroforge",
    "macros",
    "typescript",
    "sveltekit"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@macroforge/svelte-preprocessor",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "repository": {
    "directory": "packages/svelte-preprocessor",
    "type": "git",
    "url": "git+https://github.com/macroforge-ts/svelte-preprocessor.git"
  },
  "scripts": {
    "build": "deno install --node-modules-dir --quiet && deno run -A npm:typescript@5/tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "cleanbuild": "deno task clean && deno task build",
    "test": "deno task build && node --test tests/**/*.test.js"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.1.72"
}
